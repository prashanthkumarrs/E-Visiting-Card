<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistingCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="#C01717">

        <Button
            android:id="@+id/button_log"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:layout_toEndOf="@+id/button_phone"
            android:text="Logo" />

        <Button
            android:id="@+id/button_name"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="122dp"
            android:text="Name" />

        <Button
            android:id="@+id/button_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_landline"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="Designation" />

        <Button
            android:id="@+id/button_landline"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button_email"
            android:text="Landline" />

        <Button
            android:id="@+id/button_phone"
            android:layout_width="78dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="76dp"
            android:layout_toEndOf="@+id/button_left"
            android:text="Phone" />

        <Button
            android:id="@+id/button_email"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="131dp"
            android:layout_marginStart="138dp"
            android:text="Email" />

        <Button
            android:id="@+id/button_web"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/button_designation"
            android:layout_alignTop="@+id/button_address"
            android:text="Web2" />

        <Button
            android:id="@+id/button_web2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button_background"
            android:layout_marginBottom="28dp"
            android:text="Web3" />

        <Button
            android:id="@+id/button_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_phone"
            android:layout_marginEnd="-130dp"
            android:layout_toStartOf="@+id/button_name"
            android:text="Address" />

        <Button
            android:id="@+id/button_companyname"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_web2"
            android:layout_alignParentEnd="true"
            android:text="Company Name" />

        <Button
            android:id="@+id/button_Top"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="Top" />

        <Button
            android:id="@+id/button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_Top"
            android:layout_toEndOf="@+id/button_landline"
            android:text="Left" />

        <Button
            android:id="@+id/button_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_Top"
            android:layout_toStartOf="@+id/button_right"
            android:text="Bottom" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button_designation"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:text="Right" />



        <Button
            android:id="@+id/button_save"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="SAVE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vistingcard"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/textView_name1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            tools:text="Name" />

        <TextView
            android:id="@+id/textView_designation"
            android:layout_width="wrap_content"
            android:layout_height="12dp"

            android:text="Designation" />

        <TextView
            android:id="@+id/textView_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LandPhone" />

        <TextView
            android:id="@+id/textview_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Phone" />

        <TextView
            android:id="@+id/textview_email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Email" />

        <TextView
            android:id="@+id/textView_web1"
            android:layout_width="wrap_content"
            android:layout_height="12dp"

            android:text="Website1" />

        <TextView
            android:id="@+id/textView_web2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Website2" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Address" />

        <TextView
            android:id="@+id/textView_cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Company Name" />

        <ImageButton
            android:id="@+id/imageButton_logo"
            android:layout_width="67dp"
            android:layout_height="49dp"


            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_name1"
            android:src="@mipmap/ic_launcher_round" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_background"
        android:layout_width="84dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="213dp"
        android:layout_marginStart="17dp"
        android:text="BackgroundImage"
        android:textSize="8dp" />

</RelativeLayout>